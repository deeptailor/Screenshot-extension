{
  "manifest_version": 2,

  "name": "Screenshot",
  "description": "This extension allows you take a screenshot and download a jpeg of current tab with one click",
  "version": "1.0",
  "background": {
    "scripts": [
      "background.js"
    ]
  },

  "icons":{
    "128": "camera.png"
  },

  "browser_action": {
    "default_icon": "camera.png"
  },

  "permissions": [
    "<all_urls>", "downloads", "activeTab"
  ]
}
